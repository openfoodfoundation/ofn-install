upstream unicorn {
  server unix:{{ unicorn_sock }} fail_timeout=1;
}

	{% if domain == '127.0.0.1' or domain == 'localhost'%}
		{% set sub_domain = '' -%}
	{% else %}
		{% set sub_domain = 'www.' -%}
	{% endif %}

server {
  listen 80;
{% if protocol == 'https' %}
  server_name  {{sub_domain}} {{ domain }} {{ domain }};
{% else %}
  server_name  {{sub_domain}} {{ domain }};
{% endif %}
  rewrite ^/(.*) {{ protocol }}://{{ domain }}/$1 permanent;
}

{% if protocol == 'https' %}
server {
  listen 443;

  include {{ app }}_ssl;

  server_name {{sub_domain}} {{ domain }};
  rewrite ^(.*) {{ protocol }}://{{ domain }}/$1 permanent;
}
{% endif %}

server {
{% if protocol == 'https' %}
  listen 443;
{% else %}
  listen 80;
{% endif %}
  server_name {{ domain }};
  root {{ app_root }}/public;
{% if protocol == 'https' %}

  include {{ app }}_ssl;
{% endif %}

{% if basic_auth %}

  auth_basic            "Restricted";
  auth_basic_user_file  {{ app }}_htpasswd;
{% endif %}

  try_files $uri/index.html $uri @unicorn;
  location @unicorn {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
    proxy_pass http://unicorn;
  }

  location ~ ^/(assets)/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    #add_header Last-Modified "";
    #add_header ETag "";
  }
  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 60;
}
